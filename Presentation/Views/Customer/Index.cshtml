@using Domain.Dtoes;
@model CustomerDto;
@{
    ViewData["Title"] = "Show Customer Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 ">
                        <a asp-controller="Customer" asp-action="Upsert" class="btn btn-primary">Create New Customer <i class="ion ion-md-add"></i></a>
                    </div>
                </div>
                <br />
                <div class="row" id="gridContent" style="width:100%">
                    @if (Model.CustomerList.Count() > 0)
                    {
                        <div class="table-responsive col-sm-10">
                            <table id="tbl_Requests" class="table table-striped table-hover table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="dt-nowrap">Firstname </th>
                                        <th class="dt-nowrap">Lastname</th>
                                        <th class="dt-nowrap">DateOfBirth</th>
                                        <th class="dt-nowrap">Email</th>
                                        <th class="dt-nowrap">PhoneNumber</th>
                                        <th class="dt-nowrap"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CustomerList)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Firstname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Lastname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td>
                                            <a asp-action="Upsert" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Update </a>
                                            <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Delete </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- end container-fluid -->
</div>
@section Scripts
{
    <script>
            $(document).ready(function () {
                $('.table').DataTable({
                    responsive: true,
                    
                });

                $('.table tbody').on("click", 'td a.edit', function () {
                    var id = $(this).attr("data-id");
                    fn_LoadEditForm(id);
                });

            });
    </script>
}
